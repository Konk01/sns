<div class="container"> 
	<div class="row"> 
		<div class="card col s12"> 
			<div class="card-content"> 
				<div class="card-title">ポストを編集する</div> 
				<%= form_tag post_path(@post), method: "patch" do %> <div class="input-field">
				<input type="hidden" name="id" value="<%=@post.id%>">
				<%= text_area_tag :content, @post.content, class: "materialize-textarea", placeholder: "何を考えていますか？" %> 
				</div> 
				<div class="input-field"> <%= button_tag "編集", class: "btn" %> 
				</div> <% end %> 
			</div> 
		</div> 
	</div> 
</div>
